    "0.0.14": {
        "info": {
            "author": "Marcelino G. Veloso III",
            "author_email": "mars@veloso.one",
            "bugtrack_url": null,
            "classifiers": [
                "Programming Language :: Python :: 3",
                "Programming Language :: Python :: 3.10",
                "Programming Language :: Python :: 3.11"
