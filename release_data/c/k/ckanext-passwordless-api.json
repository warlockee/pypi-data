    "0.2.2": {
        "info": {
            "author": "",
            "author_email": "Sam Woodcock <sam.woodcock@protonmail.com>",
            "bugtrack_url": null,
            "classifiers": [
                "Programming Language :: Python",
                "Programming Language :: Python :: 3 :: Only",
